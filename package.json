{
  "name": "hsm-tera",
  "version": "1.0.0",
  "description": "HSM-Tera Management Application",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:clean && electron-builder",
    "build:clean": "rimraf dist"
  },
  "keywords": [
    "electron",
    "hsm-tera",
    "finance",
    "management"
  ],
  "author": "HSM Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.hsm.tera",
    "productName": "HSM-TERA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "pages/**/*",
      "scripts/**/*",
      "components/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}