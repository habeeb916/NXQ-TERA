{
  "name": "hsm-tera",
  "version": "1.0.0",
  "description": "HSM-Tera Management Application",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:clean && electron-builder",
    "build:clean": "rimraf dist",
    "build:mac": "npm run build:clean && electron-builder --mac",
    "build:win": "npm run build:clean && electron-builder --win",
    "build:linux": "npm run build:clean && electron-builder --linux",
    "build:all": "npm run build:clean && electron-builder --mac --win --linux",
    "build:mac-dmg": "npm run build:clean && electron-builder --mac --config.mac.target=dmg",
    "build:win-nsis": "npm run build:clean && electron-builder --win --config.win.target=nsis",
    "build:win-portable": "npm run build:clean && electron-builder --win --config.win.target=portable",
    "dist": "npm run build:all",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "hsm-tera",
    "finance",
    "management"
  ],
  "author": {
    "name": "HSM Team",
    "email": "admin@hsm-tera.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.hsm.tera",
    "productName": "HSM-TERA",
    "copyright": "Copyright Â© 2025 HSM Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "pages/**/*",
      "scripts/**/*",
      "components/**/*",
      "database/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database/nxq.db",
        "to": "database/nxq.db"
      }
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HSM-TERA"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}